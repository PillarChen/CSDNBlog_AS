<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.shijia.appfactory6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/banner_height" >

        <LinearLayout
            android:id="@+id/drawer_account"
            style="@style/right_menu_layout_top" >

            <ImageView
                android:id="@+id/headimgView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/drawer_pic_head" />

            <TextView
                android:id="@+id/loginName_frag_right_drawer"
                style="@style/drawer_menu_text"
                android:ellipsize="end"
                android:padding="5dp"
                android:singleLine="true"
                android:text="未登录"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_home"
            style="@style/right_menu_layout"
            android:background="@color/white" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_home" />

            <TextView
                android:id="@+id/firstpage_frag_right_drawer"
                style="@style/right_menu_text"
                android:text="推荐博客"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_myBlog"
            style="@style/right_menu_layout"
            android:background="@color/white" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_collect" />

            <TextView
                android:id="@+id/myBlog_frag_right_drawer"
                style="@style/right_menu_text"
                android:text="我的博客" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_blob_manager"
            style="@style/right_menu_layout" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/download_icon" />

            <TextView
                android:id="@+id/blob_managerTitle"
                style="@style/right_menu_text"
                android:text="博客管理" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_update"
            android:visibility="gone"
            style="@style/right_menu_layout" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_collect" />

            <TextView
                android:id="@+id/update_frag_right_drawer"
                style="@style/right_menu_text"
                android:text="版本更新" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_about"
            style="@style/right_menu_layout" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_pic_about" />

            <TextView
                android:id="@+id/about_frag_right_drawer"
                style="@style/right_menu_text"
                android:text="关于作者" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_feedback"
            style="@style/right_menu_layout" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_pic_feedback" />

            <TextView
                android:id="@+id/feedback_frag_right_drawer"
                style="@style/right_menu_text"
                android:text="意见反馈" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_clearcache"
            style="@style/right_menu_layout"
            android:visibility="gone" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_pic_clearcache" />

            <TextView
                android:id="@+id/clearcache_frag_right_drawer"
                style="@style/right_menu_text"
                android:text="清理缓存" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_loginOut"
            style="@style/right_menu_layout"
            android:clickable="true"
            android:visibility="visible" >

            <View
                android:layout_width="@dimen/menu_small_icon_size"
                android:layout_height="@dimen/menu_small_icon_size"
                android:background="@drawable/drawer_pic_unlogin" />
            <!-- android:visibility="gone" -->
            <!-- android:layout_gravity="center" -->

            <TextView
                style="@style/right_menu_text"
                android:text="退出登录" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>