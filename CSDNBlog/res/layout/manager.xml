<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/banner_add" />

    <RelativeLayout
        android:id="@+id/adcontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >
    </RelativeLayout>

    <ListView
        android:id="@+id/blobUserName_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <include layout="@layout/dialog_add_bloguser" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:id="@+id/selectAllView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_with_shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="全选"
            android:visibility="gone" />

        <TextView
            android:id="@+id/addUserView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_with_shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="添加" />

        <TextView
            android:id="@+id/delUserView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_with_shadow"
            android:gravity="center"
            android:padding="10dp"
            android:text="删除" />
    </LinearLayout>

</LinearLayout>